[user]
  name = violetyk
  #email = yuhei.kagaya@gmail.com
  email = yuhei.kagaya@nanapi.co.jp

[color]
  ui = auto
[http]
  sslVerify = false
[alias]
  st = status
  ss = "status -s"
  br = "branch -a"
  co = "checkout"
  cot = "checkout --track"
  unstage = "reset HEAD --"
  addu = "add --update"
  adda = "add --all"
  commit = "commit -av"

[core]
  #editor = vim -c \"set fenc=utf-8\"
  editor = /usr/local/vim-7.3/bin/vim -c \"set fenc=utf-8\"
  excludesfile = ~/.gitignore

[diff]
  tool = /usr/local/vim-7.3/bin/vimdiff

[merge]
  tool = /usr/local/vim-7.3/bin/vimdiff
