export EDITOR=vi
export TERM=xterm-256color
export LD_LIBRARY_PATH=$HOME/local/lib:$LD_LIBRARY_PATH

# less
# if [ -n `which source-highlight` ]; then
if which source-highlight > /dev/null 2>&1; then
  export LESS='-R'
  export LESSOPEN='| ~/.source-highlight/src-hilite-lesspipe.sh %s'
fi

# Homebrew
if which brew > /dev/null 2>&1; then
  export PATH="$(brew --prefix homebrew/php/php55)/bin:$PATH"
  export PATH="$(brew --prefix homebrew/php/php70)/bin:$PATH"
fi

# golang
if [ -e $HOME/local/go ]; then
  export GOROOT=$HOME/local/go
fi
export GOPATH=$HOME
# export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# pyenv, pyenv-virtual-env
export PYENV_ROOT=/usr/local/var/pyenv
if which pyenv > /dev/null 2>&1; then
  eval "$(pyenv init -)";
fi
if which pyenv-virtualenv-init > /dev/null 2>&1; then
  eval "$(pyenv virtualenv-init -)";
fi

# aws
export AWS_DEFAULT_REGION=ap-northeast-1
export AWS_DEFAULT_OUTPUT=json # json or table or text
export AWS_DEFAULT_PROFILE=dev
export AWS_CONFIG_FILE=~/.aws/config
export AWS_CREDENTIAL_FILE=~/.aws/credentials

export GEM_EDITOR=vi
export VISUAL=vi
export EDITOR=vi

# vim: set et fenc=utf-8 ff=unix ft=sh sts=2 sw=2 ts=2 : 
