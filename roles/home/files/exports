export EDITOR=vi
export TERM=xterm-256color
export LD_LIBRARY_PATH=$HOME/local/lib:$LD_LIBRARY_PATH

# less
if [ -n `which source-highlight` ]; then
  export LESS='-R'
  export LESSOPEN='| ~/.source-highlight/src-hilite-lesspipe.sh %s'
fi

# Homebrew
if which brew > /dev/null; then
  export PATH="$(brew --prefix homebrew/php/php55)/bin:$PATH"
  export PATH=/usr/local/Cellar/vim/HEAD/bin:$PATH
fi

# MacVim.app
if [ -e /Applications/MacVim.app/Contents/MacOS ]; then
  export PATH=/Applications/MacVim.app/Contents/MacOS:$PATH
fi

# golang
if [ -e $HOME/local/go ]; then
  export GOROOT=$HOME/local/go
fi
export GOPATH=$HOME
# export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# pyenv
export PYENV_ROOT=/usr/local/var/pyenv
if which pyenv > /dev/null; then
  eval "$(pyenv init -)";
fi

export GEM_EDITOR=vi
export VISUAL=vi
export EDITOR=vi

# vim: set et fenc=utf-8 ff=unix ft=sh sts=2 sw=2 ts=2 : 
