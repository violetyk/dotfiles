set path+=$GOPATH/src/**
let g:gofmt_command = 'goimports'
augroup Golang
  autocmd!
  autocmd BufWritePre *.go Fmt
  autocmd BufNewFile,BufRead *.go set sw=4 noexpandtab ts=4 completeopt=menu,preview
  autocmd FileType go compiler go
augroup END

